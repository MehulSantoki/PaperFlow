        <shape>
            <corners android:radius="5dp"/>
            <solid android:color="@color/selected_button_bg"/>
        </shape>
    </item>

    <item android:id="@android:id/progress"
        >

        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="5dp"/>
                <solid android:color="@color/selected_button_bg"/>
            </shape>
        </scale>
    </item>
</layer-list>