<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_10"
    android:background="@drawable/list_item_bg"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_weight="0.6"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today 23:00 PM"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"
                android:textSize="@dimen/sp_12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="Atulâ€™s GPSC General Knowledge Smartbook - Chap: 2, 3"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="0.4">
        <com.paperflow.utils.CircularProgressbar
            android:id="@+id/progresssBar"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10">
        <LinearLayout
            android:id="@+id/practicLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pages Scanned:"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/sp_12"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123, 125"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/title_color"
                android:textStyle="bold"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/practicLayout"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skills Practised:"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/sp_12"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/title_color"
                android:textStyle="bold"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:background="@drawable/list_item_bg"
            android:layout_alignParentRight="true"
            android:text="View Details"
            android:textAllCaps="false"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:textColor="@color/selected_button_text_color"/>
    </RelativeLayout>
</LinearLayout>