<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    android:background="@drawable/list_item_bg">


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Curtural Haritage"
        android:textColor="@color/dark_gray"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/sp_14"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:layout_marginTop="@dimen/dp_10"
        >
        <TextView
            android:id="@+id/marksTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9/30"
            android:textColor="@color/dark_gray"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_14"/>
        <ProgressBar
            android:id="@+id/progressBar2"
            style="@style/MyProgressBar"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/marksTextView"
            android:layout_centerVertical="true"
            android:progressBackgroundTint="@color/selected_button_bg"
            android:progressTint="@color/yellow"
            android:minWidth="200dp"
            android:minHeight="20dp"
            android:maxHeight="20dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:progress="50"
            android:scaleY="1"
            android:backgroundTint="@color/selected_button_bg"
            android:progressDrawable="@drawable/yellow_progress_drawable"/>


    </RelativeLayout>


</RelativeLayout>