<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_10"
    android:background="@drawable/paper_question_bg">

    <RelativeLayout
        android:id="@+id/questionRl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q:32"
            android:textStyle="bold"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/sp_12"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:src="@drawable/pencil_edit_button"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/ansImageView"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_below="@+id/questionRl"
        android:layout_marginTop="@dimen/dp_10"/>

    <EditText
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_below="@+id/questionRl"
        android:maxLength="1"
        android:background="@drawable/list_item_bg"
        android:gravity="center"
        android:layout_toRightOf="@+id/ansImageView"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"/>
</RelativeLayout>